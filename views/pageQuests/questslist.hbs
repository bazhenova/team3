{{#extend "base"}}
    {{#content "css" mode="append"}}
        {{#if isDev}}
            <link rel="stylesheet" href="/quests.css">
        {{else}}
            <link rel="stylesheet" href="//kafkatist.surge.sh/quests.css">
        {{/if}}
    {{/content}}
    {{#content "content"}}
        <div class="search-quests">
            <div class="input-group col-xs-12 col-sm-5">
                <input type="text" class="form-control" placeholder="Введите название или тэг" id="search-input">
                <button class="btn" id="search-button">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <input type="button" class="btn btn_green" value="Квесты рядом" id="sort-button">
            <div class="hint">Для фильтрации по вашему местоположению включите службы геолокации.</div>
        </div>
        <div class="load load_invisible">
            <div class="load__img"></div>
        </div>
        <main class="container-fluid">
            {{#if quests.length}}
                {{#each quests}}
                    <figure style="background-image:url({{titleImage}});" class="col-xs-12 col-sm-12 col-md-6 col-lg-6 quest medium" data-slug="{{slug}}">
                        <div class="blur"></div>
                        <h3 class="quest-name">{{displayName}}</h3>
                        <figcaption class="addition">
                            <ul class="icons">
                                <li class="icon"><i class="fa fa-2x fa-thumbs-o-up fa-fw"></i>{{rating.likes.length}}</li>
                                <li class="icon"><i class="fa fa-2x fa-thumbs-o-down fa-fw"></i>{{rating.dislikes.length}}</li>
                            </ul>
                            <p class="description description__medium box after">{{description}}</p>
                        </figcaption>
                    </figure>
                {{/each}}
            {{^}}
                <p class="no-quests">Квесты не найдены!</p>
            {{/if}}
        </main>
    {{/content}}
    {{#content "js" mode="append"}}
        <script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jQuery.dotdotdot/1.7.4/jquery.dotdotdot.js"></script>
        {{#if isDev}}
            <script src="/quests.js" type="text/javascript"></script>
        {{else}}
            <script src="//kafkatist.surge.sh/quests.js" type="text/javascript"></script>
        {{/if}}
    {{/content}}
{{/extend}}