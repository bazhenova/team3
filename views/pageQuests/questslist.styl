screen-xs-max = 768px;
screen-md-min = 992px;
tr-time = .65s; 

.search-quests
{
    margin: 10px 2%;
    background: none;
    text-align: center;
    width: 96%;
}

.load
{
    width: 100%;
    text-align: center;
}

.container-fluid_shift
{
    transform: translateY(5px);
    transition: transform .8s ease;
}

.load__img
{
    background: url('loading.gif');
    margin-bottom: 10px;
    width: 40px;
    height: 40px;
    background-position: center center;
    background-size: cover;
    display: inline-block;
}

.load_invisible
{
    display:none;
}

.description
{
    text-overflow: ellipsis;
}

#search-input
{
    width: 85%;
}

#search-button
{
    width: 15%;
}

#sort-button
{
    width: 17%;
    display: inline-block;
}

.input-group
{
    display: inline-block;
    width: 80%;
    margin: 0 1%;
}

.quest
{
    position: relative;
    background: #18bc9c;
    padding: 0;
    overflow: hidden;
    background-position: center center;
    background-size: cover;
    height: 600px;
    margin: 1% 0;

    &-name
    {
        position: relative;
        font-weight: bold;
        font-size: 35px;
        padding: 20px 20px 20px;
        top: 130px;
        color: #fff;
        text-align: left;
        text-shadow: 0 0 5px rgba(0,0,0,.5);
        overflow: hidden; 
        text-overflow: ellipsis;
        white-space: nowrap;
        z-index: 1000;
        transition: tr-time;
        transform: top;
        background: rgba(40, 101, 108, .8);
        cursor: pointer;

        &::after
        {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: #fff;
            content: '';
            transition: transform tr-time;
            transform: translate3d(-100%, 0, 0);
        }
    }

    &:hover .quest-name
    {
        top: 20px;
    }
}

.small
{
    height: 50%;
}

.large
{
    height: 100%;
}

.description
{
    z-index: 100;
    padding: 10px;
    position: absolute;
    left: 0;
    right: 0;
    text-transform: none;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    color: #fff;
    opacity: 0;
    background: rgba(40, 101, 108, .8);
    cursor: pointer;

    &__small
    {
        height: 120px;
        font-size: 16px;
        bottom: 3em;
    }

    &__medium
    {
        max-height: 120px;
        font-size: 20px;
        bottom: 10em;
    }

    &__large
    {
        height: 300px;
        font-size: 22px;
        bottom: 4.5em;
    }
}


.icons
{
    margin: 0;
    text-align: center;
    padding: 10px;
}

.icon
{
    display: inline; 
    margin: 40px 10px; 
    font-size: 15px;
    /*color: #fff;*/
    z-index: 1000;
    white-space: nowrap;
}

.addition
{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    top: auto;
    background: #fff;
    color: #28656C;
    height: 50px;

}

.blur
{
    z-index: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    left: 0;
    cursor: pointer;
}

.medium .blur 
{
    background: no-repeat center center;
    background-size: cover;
}

.small .blur 
{
    background: no-repeat center center;
    background-size: cover;
}

.large .blur 
{
    background: no-repeat center center;
    background-size: cover;
}

.hint
{
    text-align: center;
    font-size: 120%;
    margin-top: 1%;
    display:inline-block;
    width: 95%;
    color: #8d8b8b;
}

@media (max-width: screen-xs-max)
{
    #sort-button
    {
        margin-top: 1%;
        width: 95%;
    }
    
    .input-group
    {
        width: 95%;
    }
    
    .quest
    {
        height: 450px;
    }

    .quest-name
    {
        font-size: 24px;
    }

    .description
    {
        max-height: 150px;
        opacity: 1;
        font-size: 16px;
        bottom: 9em;
    }
}

@media (min-width: screen-xs-max) and (max-width: screen-md-min)
{
    .quest
    {
        height: 600px;
    }

    .description
    {
        max-height: 150px;
        bottom: 8em;
        font-size: 24px;
        opacity: 1;
    }
}

@media (max-width: screen-md-min) 
{
    .quest-name
    {
        top: 20px;

        &::after
        {
            transform: translate3d(0, 0, 0);
        }
    }

    .addition
    {
        transition: transform tr-time;
        transform: translate3d(0,0,0);
    }

    .blur
    {
        -webkit-filter: url(#blur);
        filter: url(#blur);
        -webkit-filter: blur(5px);
        filter: blur(5px);
        -webkit-transition: 1s -webkit-filter linear;
        transition: 1s filter linear;
    }
}


@media (min-width: screen-md-min)
{
    .container-fluid
    {
        padding-right: 0;
    }
    
    .col-md-6
    {
        width: 49%;
    }
    
    .quest
    {
        border-radius: 15px;
    }
    
    .quest:nth-child(even)
    {
        margin-left: 1%;
    }
    
    .quest:hover
    {
        .quest-name::after
        {
            transform: translate3d(0,0,0);
        }

        .description
        {
            opacity: 1;
        }

        .blur
        {
            -webkit-filter: url(#blur);
            filter: url(#blur);
            -webkit-filter: blur(5px);
            filter: blur(5px);
            -webkit-transition: 1s -webkit-filter linear;
            transition: 1s filter linear;
        }

        .addition
        {
            transform: translate3d(0, 0, 0);
        }
    } 

    .addition
    {
        transition: transform tr-time;
        transform: translate3d(0, 100%, 0);
    }
    
    .hint
    {
        display:none;
    }
}

.no-quests
{
    text-align: center;
    font-size: 120%;
}

.btn_green
{
    background: #088DA5;
    color: #fff;
}
